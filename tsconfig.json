  {
    "compilerOptions": {
      "target": "ES2016",
      "module": "commonjs",
      "allowJs": true,
      "jsx": "react",
      "declaration": true,
      "outDir": "./dist/",
      "removeComments": true,
      "strict": true,
      "alwaysStrict": true,
      "locale": "en-us",
      "baseUrl": "./",
      "paths": {
        "@/*": ["./src/*.ts"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
